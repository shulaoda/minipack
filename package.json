{
  "name": "minipack",
  "private": true,
  "description": "",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "lint-code": "oxlint -c .oxlintrc.json --ignore-path=.oxlintignore --deny-warnings",
    "lint-spell": "cspell \"**\" --no-progress  --gitignore",
    "lint-repo": "npm-run-all -l --parallel fmt lint-spell",
    "fmt": "dprint fmt"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "cspell": "^8.17.1",
    "oxlint": "^0.16.5",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.@(js|ts|tsx|yml|yaml|md|json|html|toml)": [
      "dprint fmt"
    ],
    "*.@(js|ts|tsx)": [
      "pnpm lint-code -- --fix"
    ],
    "*": "cspell --no-progress --gitignore --no-must-find-files"
  }
}
